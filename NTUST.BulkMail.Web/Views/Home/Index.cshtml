@{
    ViewBag.Title = "Home Page";
}

<div id="app" class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">大宗郵件</h3>
                        </div>
                        <div class="card-body">
                            <table id="bulkmail" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">序號</th>
                                        <th scope="col">姓名</th>
                                        <th scope="col">單位</th>
                                        <th scope="col">E-Mail</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="(item,i) in pageList.ItemList">
                                        <th scope="row">{{ i + pageList.FirstItemOnPage }}</th>
                                        <td>{{item.name}}</td>
                                        <td>{{item.unit}}</td>
                                        <td>{{item.email}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="id">Id:</label>
                        <input type="text" class="form-control" id="id" v-model="id">
                    </div>
                    <div class="form-group">
                        <label for="semester">Semester:</label>
                        <input type="text" class="form-control" id="semester" v-model="semester">
                    </div>
                    <button type="button" class="btn btn-primary" v-on:click="getData(1)">測試</button>
                </div>
            </div>
        </div>
    </section>
</div>
